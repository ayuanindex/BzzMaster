<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCurrencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:text="币种名称"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCurrencyTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="币种"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrencyName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:text="USDT"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrencyTip" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAvailableTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="可用"
        app:layout_constraintBottom_toBottomOf="@+id/tvCurrencyTip"
        app:layout_constraintEnd_toStartOf="@+id/tvFrozenTip"
        app:layout_constraintStart_toEndOf="@+id/tvCurrencyTip"
        app:layout_constraintTop_toTopOf="@+id/tvCurrencyTip" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        app:layout_constraintBottom_toBottomOf="@+id/tvCurrency"
        app:layout_constraintStart_toStartOf="@+id/tvAvailableTip"
        app:layout_constraintTop_toTopOf="@+id/tvCurrency" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvFrozenTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="冻结"
        app:layout_constraintBottom_toBottomOf="@+id/tvAvailableTip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAvailableTip" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvFrozen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        app:layout_constraintBottom_toBottomOf="@+id/tvAvailable"
        app:layout_constraintEnd_toEndOf="@+id/tvFrozenTip"
        app:layout_constraintTop_toTopOf="@+id/tvAvailable" />
</androidx.constraintlayout.widget.ConstraintLayout>